<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 mb-2">
        <%= locals.category ? 'Edit Category' : 'Create New Category' %>
      </h1>
      <p class="text-gray-600">
        <%= locals.category ? 'Update the category information.' : 'Create a new category to organize your content.' %>
      </p>
    </div>
    <a
      href="/admin/categories"
      class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors"
    >
      <i class="fas fa-arrow-left mr-2"></i>
      Back to Categories
    </a>
  </div>
</div>

<form
  action="<%= locals.category ? `/admin/categories/${category._id}/edit` : '/admin/categories/create' %>"
  method="POST"
  x-data="{
    formData: {
      name: '<%= locals.category ? category.name : '' %>',
      slug: '<%= locals.category ? category.slug : '' %>',
      description: '<%= locals.category ? (category.description || '') : '' %>',
      color: '<%= locals.category ? (category.color || '#3B82F6') : '#3B82F6' %>',
      featured: <%= locals.category ? (category.featured || false) : false %>,
      parentCategory: '<%= locals.category ? (category.parentCategory || '') : '' %>',
      metaTitle: '<%= locals.category ? (category.metaTitle || '') : '' %>',
      metaDescription: '<%= locals.category ? (category.metaDescription || '') : '' %>'
    },
    autoSlug: <%= locals.category ? false : true %>,
    previewColor: '<%= locals.category ? (category.color || '#3B82F6') : '#3B82F6' %>',

    generateSlug() {
      if (this.autoSlug && this.formData.name) {
        this.formData.slug = this.formData.name
          .toLowerCase()
          .replace(/[^a-z0-9\s-]/g, '')
          .replace(/\s+/g, '-')
          .replace(/-+/g, '-')
          .trim();
      }
    },

    updatePreviewColor() {
      this.previewColor = this.formData.color;
    }
  }"
  class="grid grid-cols-1 lg:grid-cols-3 gap-8"
>
  <!-- Main Form -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Basic Information -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-6">Basic Information</h3>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
            Category Name *
          </label>
          <input
            type="text"
            id="name"
            name="name"
            x-model="formData.name"
            @input="generateSlug()"
            required
            class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500"
            placeholder="Technology, Lifestyle, etc."
          >
        </div>

        <div>
          <label for="slug" class="block text-sm font-medium text-gray-700 mb-2">
            URL Slug *
            <span class="text-xs text-gray-500">(auto-generated)</span>
          </label>
          <div class="flex">
            <input
              type="text"
              id="slug"
              name="slug"
              x-model="formData.slug"
              @input="autoSlug = false"
              required
              class="flex-1 px-3 py-2 border border-gray-300 rounded-l-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500"
              placeholder="category-slug"
            >
            <button
              type="button"
              @click="autoSlug = true; generateSlug()"
              class="px-3 py-2 border border-l-0 border-gray-300 rounded-r-md bg-gray-50 text-gray-500 hover:bg-gray-100"
              title="Auto-generate slug"
            >
              <i class="fas fa-refresh"></i>
            </button>
          </div>
          <p class="mt-1 text-xs text-gray-500">
            URL: /blog?category=<span x-text="formData.slug || 'category-slug'"></span>
          </p>
        </div>
      </div>

      <div class="mt-6">
        <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
          Description
        </label>
        <textarea
          id="description"
          name="description"
          x-model="formData.description"
          rows="4"
          class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500"
          placeholder="Brief description of what this category contains..."
        ></textarea>
        <p class="mt-1 text-xs text-gray-500">
          <span x-text="formData.description.length"></span>/500 characters
        </p>
      </div>

      <div class="mt-6">
        <label for="parentCategory" class="block text-sm font-medium text-gray-700 mb-2">
          Parent Category
          <span class="text-xs text-gray-500">(optional)</span>
        </label>
        <select
          id="parentCategory"
          name="parentCategory"
          x-model="formData.parentCategory"
          class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500"
        >
          <option value="">None (Top Level)</option>
          <% if (locals.parentCategories) { %>
            <% parentCategories.forEach(parent => { %>
              <option value="<%= parent._id %>"><%= parent.name %></option>
            <% }); %>
          <% } %>
        </select>
        <p class="mt-1 text-xs text-gray-500">
          Create hierarchical categories by selecting a parent category.
        </p>
      </div>
    </div>

    <!-- Appearance -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-6">
        <i class="fas fa-palette mr-2"></i>
        Appearance
      </h3>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label for="color" class="block text-sm font-medium text-gray-700 mb-2">
            Category Color
          </label>
          <div class="flex items-center space-x-3">
            <input
              type="color"
              id="color"
              name="color"
              x-model="formData.color"
              @input="updatePreviewColor()"
              class="h-10 w-20 border border-gray-300 rounded cursor-pointer"
            >
            <input
              type="text"
              x-model="formData.color"
              @input="updatePreviewColor()"
              class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary-500 focus:border-primary-500"
              placeholder="#3B82F6"
            >
          </div>
          <p class="mt-1 text-xs text-gray-500">
            This color will be used for category badges and highlights.
          </p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Color Preview
          </label>
          <div class="flex items-center space-x-3">
            <div
              class="w-8 h-8 rounded-full border-2 border-gray-300"
              :style="`background-color: ${previewColor}`"
            ></div>
            <div
              class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium text-white"
              :style="`background-color: ${previewColor}`"
            >
              <span x-text="formData.name || 'Category Name'"></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- SEO Settings -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-6">
        <i class="fas fa-search-plus mr-2"></i>
        SEO Settings
      </h3>

      <div class="space-y-6">
        <div>
          <label for="metaTitle" class="block text-sm font-medium text-gray-700 mb-2">
            Meta Title
            <span class="text-xs text-gray-500">(optional)</span>
          </label>
          <input
            type="text"
            id="metaTitle"
            name="metaTitle"
            x-model="formData.metaTitle"
            class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500"
            placeholder="SEO-optimized title for search engines"
          >
          <p class="mt-1 text-xs text-gray-500">
            <span x-text="formData.metaTitle.length"></span>/60 characters recommended
          </p>
        </div>

        <div>
          <label for="metaDescription" class="block text-sm font-medium text-gray-700 mb-2">
            Meta Description
            <span class="text-xs text-gray-500">(optional)</span>
          </label>
          <textarea
            id="metaDescription"
            name="metaDescription"
            x-model="formData.metaDescription"
            rows="3"
            class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary-500 focus:border-primary-500"
            placeholder="Brief description for search engine results (150-160 characters)"
          ></textarea>
          <p class="mt-1 text-xs text-gray-500">
            <span x-text="formData.metaDescription.length"></span>/160 characters recommended
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="space-y-6">
    <!-- Publishing Options -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-6">
        <i class="fas fa-cog mr-2"></i>
        Settings
      </h3>

      <div class="space-y-4">
        <div>
          <label class="flex items-center">
            <input
              type="checkbox"
              name="featured"
              x-model="formData.featured"
              class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
            >
            <span class="ml-2 text-sm text-gray-700">Featured category</span>
          </label>
          <p class="mt-1 text-xs text-gray-500 ml-6">
            Featured categories appear prominently on the homepage and category listings.
          </p>
        </div>

        <div>
          <label class="flex items-center">
            <input
              type="checkbox"
              name="allowPosts"
              checked
              class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
            >
            <span class="ml-2 text-sm text-gray-700">Allow posts</span>
          </label>
          <p class="mt-1 text-xs text-gray-500 ml-6">
            Uncheck to make this a category group that only contains subcategories.
          </p>
        </div>

        <div>
          <label class="flex items-center">
            <input
              type="checkbox"
              name="showInMenu"
              checked
              class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
            >
            <span class="ml-2 text-sm text-gray-700">Show in navigation</span>
          </label>
          <p class="mt-1 text-xs text-gray-500 ml-6">
            Display this category in the main navigation menu.
          </p>
        </div>
      </div>
    </div>

    <!-- Category Stats -->
    <% if (locals.category) { %>
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">
          <i class="fas fa-chart-bar mr-2"></i>
          Statistics
        </h3>

        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Total Posts</span>
            <span class="text-sm font-medium text-gray-900"><%= category.postCount || 0 %></span>
          </div>

          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Published Posts</span>
            <span class="text-sm font-medium text-gray-900"><%= category.publishedCount || 0 %></span>
          </div>

          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Draft Posts</span>
            <span class="text-sm font-medium text-gray-900"><%= category.draftCount || 0 %></span>
          </div>

          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Total Views</span>
            <span class="text-sm font-medium text-gray-900"><%= category.totalViews || 0 %></span>
          </div>

          <div class="pt-4 border-t border-gray-200">
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">Created</span>
              <span class="text-sm font-medium text-gray-900">
                <%= new Date(category.createdAt).toLocaleDateString() %>
              </span>
            </div>

            <% if (category.updatedAt && category.updatedAt !== category.createdAt) { %>
              <div class="flex justify-between items-center mt-2">
                <span class="text-sm text-gray-600">Last Updated</span>
                <span class="text-sm font-medium text-gray-900">
                  <%= new Date(category.updatedAt).toLocaleDateString() %>
                </span>
              </div>
            <% } %>
          </div>
        </div>

        <% if (category.postCount > 0) { %>
          <div class="mt-6 pt-4 border-t border-gray-200">
            <a
              href="/admin/posts?category=<%= category._id %>"
              class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
            >
              <i class="fas fa-file-alt mr-2"></i>
              View Posts in This Category
            </a>
          </div>
        <% } %>
      </div>
    <% } %>

    <!-- Quick Actions -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">
        <i class="fas fa-bolt mr-2"></i>
        Quick Actions
      </h3>

      <div class="space-y-3">
        <button
          type="submit"
          name="action"
          value="save"
          class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
        >
          <i class="fas fa-save mr-2"></i>
          <%= locals.category ? 'Update Category' : 'Create Category' %>
        </button>

        <% if (locals.category) { %>
          <button
            type="submit"
            name="action"
            value="save_and_create"
            class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
          >
            <i class="fas fa-plus mr-2"></i>
            Save & Create New
          </button>
        <% } else { %>
          <button
            type="submit"
            name="action"
            value="save_and_continue"
            class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
          >
            <i class="fas fa-arrow-right mr-2"></i>
            Save & Continue Editing
          </button>
        <% } %>

        <% if (locals.category) { %>
          <div class="pt-3 border-t border-gray-200">
            <button
              type="button"
              onclick="deleteCategory()"
              class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700"
            >
              <i class="fas fa-trash mr-2"></i>
              Delete Category
            </button>
          </div>
        <% } %>
      </div>

      <div class="mt-6 pt-4 border-t border-gray-200">
        <button
          type="button"
          onclick="window.history.back()"
          class="w-full text-sm text-gray-500 hover:text-gray-700"
        >
          <i class="fas fa-times mr-1"></i>
          Cancel
        </button>
      </div>
    </div>

    <!-- Preview -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">
        <i class="fas fa-eye mr-2"></i>
        Preview
      </h3>

      <div class="border border-gray-200 rounded-lg p-4 bg-gray-50">
        <div class="flex items-center space-x-3 mb-3">
          <div
            class="w-4 h-4 rounded-full"
            :style="`background-color: ${previewColor}`"
          ></div>
          <h4 class="font-medium text-gray-900" x-text="formData.name || 'Category Name'"></h4>
          <span
            x-show="formData.featured"
            class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800"
          >
            Featured
          </span>
        </div>

        <p class="text-sm text-gray-600" x-text="formData.description || 'Category description will appear here...'"></p>

        <div class="mt-3 pt-3 border-t border-gray-200">
          <p class="text-xs text-gray-500">
            URL: /blog?category=<span x-text="formData.slug || 'category-slug'"></span>
          </p>
        </div>
      </div>
    </div>
  </div>
</form>

<% if (locals.category) { %>
<script>
function deleteCategory() {
  if (!confirm('Are you sure you want to delete this category? This action cannot be undone and will affect all posts in this category.')) {
    return;
  }

  const form = document.createElement('form');
  form.method = 'POST';
  form.action = '/admin/categories/<%= category._id %>/delete';

  const methodInput = document.createElement('input');
  methodInput.type = 'hidden';
  methodInput.name = '_method';
  methodInput.value = 'DELETE';
  form.appendChild(methodInput);

  document.body.appendChild(form);
  form.submit();
}
</script>
<% } %>