<!-- Sidebar for desktop -->
<div class="hidden lg:flex lg:w-64 lg:flex-col lg:fixed lg:inset-y-0">
  <div class="flex-1 flex flex-col min-h-0 bg-gray-800">
    <div class="flex items-center h-16 flex-shrink-0 px-4 bg-gray-900">
      <a href="/admin" class="text-white text-lg font-semibold">
        <i class="fas fa-tachometer-alt mr-2"></i>
        CMS Admin
      </a>
    </div>
    <div class="flex-1 flex flex-col overflow-y-auto">
      <nav class="flex-1 px-2 py-4 space-y-1">
        <a href="/admin" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
          <i class="fas fa-home text-gray-400 group-hover:text-gray-300 mr-3 flex-shrink-0 h-5 w-5"></i>
          Dashboard
        </a>

        <a href="/admin/posts" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
          <i class="fas fa-file-alt text-gray-400 group-hover:text-gray-300 mr-3 flex-shrink-0 h-5 w-5"></i>
          Posts
        </a>

        <a href="/admin/posts/create" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors ml-4">
          <i class="fas fa-plus text-gray-400 group-hover:text-gray-300 mr-3 flex-shrink-0 h-5 w-5"></i>
          New Post
        </a>

        <a href="/admin/categories" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
          <i class="fas fa-tags text-gray-400 group-hover:text-gray-300 mr-3 flex-shrink-0 h-5 w-5"></i>
          Categories
        </a>

        <a href="/admin/media" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
          <i class="fas fa-images text-gray-400 group-hover:text-gray-300 mr-3 flex-shrink-0 h-5 w-5"></i>
          Media Library
        </a>

        <% if (user && (user.role === 'admin' || user.role === 'editor')) { %>
          <div class="mt-6">
            <h3 class="px-2 text-xs font-semibold text-gray-400 uppercase tracking-wider">
              Management
            </h3>
            <div class="mt-2 space-y-1">
              <% if (user.role === 'admin') { %>
                <a href="/admin/users" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
                  <i class="fas fa-users text-gray-400 group-hover:text-gray-300 mr-3 flex-shrink-0 h-5 w-5"></i>
                  Users
                </a>
              <% } %>

              <a href="/admin/analytics" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
                <i class="fas fa-chart-line text-gray-400 group-hover:text-gray-300 mr-3 flex-shrink-0 h-5 w-5"></i>
                Analytics
              </a>
            </div>
          </div>
        <% } %>

        <div class="mt-6">
          <h3 class="px-2 text-xs font-semibold text-gray-400 uppercase tracking-wider">
            Account
          </h3>
          <div class="mt-2 space-y-1">
            <a href="/profile" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
              <i class="fas fa-user text-gray-400 group-hover:text-gray-300 mr-3 flex-shrink-0 h-5 w-5"></i>
              Profile
            </a>

            <a href="/" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
              <i class="fas fa-external-link-alt text-gray-400 group-hover:text-gray-300 mr-3 flex-shrink-0 h-5 w-5"></i>
              View Site
            </a>
          </div>
        </div>
      </nav>
    </div>
  </div>
</div>

<!-- Sidebar for mobile -->
<div x-show="sidebarOpen" class="lg:hidden" x-transition:enter="transition-opacity ease-linear duration-300" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100" x-transition:leave="transition-opacity ease-linear duration-300" x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0">
  <div class="fixed inset-0 flex z-40">
    <div @click="sidebarOpen = false" class="fixed inset-0 bg-gray-600 bg-opacity-75" aria-hidden="true"></div>

    <div class="relative flex-1 flex flex-col max-w-xs w-full bg-gray-800">
      <div class="absolute top-0 right-0 -mr-12 pt-2">
        <button @click="sidebarOpen = false" class="ml-1 flex items-center justify-center h-10 w-10 rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
          <span class="sr-only">Close sidebar</span>
          <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="flex-shrink-0 flex items-center px-4 h-16 bg-gray-900">
        <a href="/admin" class="text-white text-lg font-semibold">
          <i class="fas fa-tachometer-alt mr-2"></i>
          CMS Admin
        </a>
      </div>

      <div class="mt-5 flex-1 h-0 overflow-y-auto">
        <nav class="px-2 space-y-1">
          <!-- Same navigation items as desktop -->
          <a href="/admin" class="group flex items-center px-2 py-2 text-base font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
            <i class="fas fa-home text-gray-400 group-hover:text-gray-300 mr-4 flex-shrink-0 h-6 w-6"></i>
            Dashboard
          </a>

          <a href="/admin/posts" class="group flex items-center px-2 py-2 text-base font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
            <i class="fas fa-file-alt text-gray-400 group-hover:text-gray-300 mr-4 flex-shrink-0 h-6 w-6"></i>
            Posts
          </a>

          <a href="/admin/posts/create" class="group flex items-center px-2 py-2 text-base font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors ml-4">
            <i class="fas fa-plus text-gray-400 group-hover:text-gray-300 mr-4 flex-shrink-0 h-6 w-6"></i>
            New Post
          </a>

          <a href="/admin/categories" class="group flex items-center px-2 py-2 text-base font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
            <i class="fas fa-tags text-gray-400 group-hover:text-gray-300 mr-4 flex-shrink-0 h-6 w-6"></i>
            Categories
          </a>

          <a href="/admin/media" class="group flex items-center px-2 py-2 text-base font-medium rounded-md text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
            <i class="fas fa-images text-gray-400 group-hover:text-gray-300 mr-4 flex-shrink-0 h-6 w-6"></i>
            Media Library
          </a>
        </nav>
      </div>
    </div>

    <div class="flex-shrink-0 w-14" aria-hidden="true">
      <!-- Force sidebar to shrink to fit close icon -->
    </div>
  </div>
</div>